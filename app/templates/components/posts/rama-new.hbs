<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">

      <div class="row title">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
          <h2>New Post</h2>
          <div class="form-group form-group-lg">
            {{input class="form-control input-lg" value=title type="text" placeholder="Title"}}
          </div>
        </div>
        <div class="col-sm-2"></div>
      </div>

      <div class="row content">
        <div class="col-sm-2 taxonomy">
          <ul class="list-unstyled">
            <li>
              <div class="dropdown">
                <button id="categroyButton" type="button" data-toggle="dropdown" class="btn btn-xs btn-info">
                  Add a Category
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li>dog</li>
                  <li>cat</li>
                  <li>mouse</li>
                </ul>
              </div>
            </li>

          </ul>
        </div>
        <div class="col-sm-8">
          <div class="form-group form-group-lg">
            {{textarea class="form-control input-lg" value=body rows="10" placeholder="What's happening?"}}
          </div>
          <div class="form-group form-group-lg">
            <button type="button" class="btn btn-lg btn-primary pull-right" {{action 'publishPost'}}>Publish</button>
          </div>
        </div>
        <div class="col-sm-2"></div>
      </div>

    </div>
  </div>
</div>