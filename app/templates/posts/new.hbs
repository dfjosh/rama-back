<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <h2>New Post</h2>
      <form class="form-horizontal">
        <div class="form-group form-group-lg">
          <div class="col-sm-8">
            {{input class="form-control input-lg" value=title type="text" placeholder="Title"}}
          </div>
        </div>
        <div class="form-group form-group-lg">
          <div class="col-sm-12">
            {{textarea class="form-control input-lg" value=body rows="10" placeholder="What's happening?"}}
          </div>
        </div>
        <div class="form-group form-group-lg">
          <div class="col-sm-12">
            <button class="btn btn-lg btn-primary pull-right" {{action 'publishPost'}}>Pubish</button>
          </div>
        </div>
      </form>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>