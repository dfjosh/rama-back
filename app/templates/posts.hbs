<div class="container-fluid">
  {{#each model as |post|}}
    <article class="row">
      <div class="col-sm-12">

        <div class="row title">
          <div class="col-sm-2"></div>
          <div class="col-sm-8">
            <h1>
              {{#link-to 'post' post}}
                <span class="glyphicon glyphicon-asterisk"></span>
                {{post.title}}
              {{/link-to}}
            </h1>
          </div>
          <div class="col-sm-2"></div>
        </div>

        <div class="row content">
          <div class="col-sm-2" style="padding-right: 0px;">
            {{post-taxonomy model=post}}
          </div>
          <div class="col-sm-8">
            <p>{{post.htmlBody}}</p>
            <p>&mdash;
              by <em><strong>{{post.author}}</strong></em>
              at <em><strong>{{moment-format post.createdAt 'h:m a'}}</strong></em>
              on <em><strong>{{moment-format post.createdAt 'MMMM D, YYYY'}}</strong></em>
            </p>
            <hr />
          </div>
          <div class="col-sm-2"></div>
        </div>

      </div>
    </article>
  {{/each}}
</div>