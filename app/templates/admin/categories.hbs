<div class="row categories-toolbar">
  <div class="col-sm-12">
    {{link-to "New Category" "admin.categories.new" class="btn btn-primary pull-right"}}
  </div>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>created</th>
      <th>updated</th>
      <th>edit</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |category|}}
      <tr>
        <td>{{category.id}}</td>
        <td>{{category.name}}</td>
        <td>{{formatted-date category.createdAt}}</td>
        <td>{{formatted-date category.updatedAt}}</td>
        <td>
          {{#link-to "admin.categories.edit" category}}
            <span class="glyphicon glyphicon-pencil"></span>
          {{/link-to}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}