<div class="row tags-toolbar">
  <div class="col-sm-12">
    {{link-to "New Tag" "admin.tags.new" class="btn btn-primary pull-right"}}
  </div>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>created</th>
      <th>updated</th>
      <th>edit</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |tag|}}
      <tr>
        <td>{{tag.id}}</td>
        <td>{{tag.name}}</td>
        <td>{{formatted-date tag.createdAt}}</td>
        <td>{{formatted-date tag.updatedAt}}</td>
        <td>
          {{#link-to "admin.tags.edit" tag}}
            <span class="glyphicon glyphicon-pencil"></span>
          {{/link-to}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}